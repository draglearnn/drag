<!-- views/book-lesson.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book a Lesson</title>
</head>
<body>
  <%- include ('./partials/navigation.ejs') %>
  
  <h1>Book a Lesson</h1>

  <script>
    // JavaScript code to extract tutorId from the current URL
    const tutorId = window.location.pathname.split('/').slice(-1)[0];
    // Set the form action dynamically with the tutorId
    document.addEventListener('DOMContentLoaded', function() {
      // Get the form element
      const lessonForm = document.getElementById('lessonForm');
      // Set the action attribute
      lessonForm.action = `/book-lesson?tid=${tutorId}`;
    });
  </script>

<form method="post" id="lessonForm">
    <!-- Add fields for lesson booking information -->
    <!-- The tutorId will be automatically included in the form action -->
    <input type="hidden" id="tutorId" name="tutorId" value="<%= tutorId %>">

    <label for="date">Date:</label>
    <input type="date" id="date" name="date" required>
  
    <label for="time">Time:</label>
    <input type="time" id="time" name="time" required>
  
    <label for="duration">Duration (in hours):</label>
    <input type="number" id="duration" name="duration" required>
  
    <button type="submit">Book Lesson</button>
  </form>
  

  <%- include ('./partials/footer.ejs') %>
</body>
</html>
