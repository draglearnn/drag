<!-- apply-lesson.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>

    <style>
        body {
            zoom: 86%;
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #45a049;
        }

        form {
            max-width: 400px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #555;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 16px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
        }

        button {
            background-color: #45a049;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #36833a;
        }

        a {
            display: block;
            margin-top: 20px;
            text-align: center;
            text-decoration: none;
            color: #45a049;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <%- include('./partials/navigation.ejs') %>
    <h1><%= pageTitle %></h1>

    <form action="/apply-lesson/<%= tutor._id %>" method="POST">
        <label for="date">Select a Date:</label>
        <input type="date" id="date" name="date" required>

        <label for="time">Select a Time:</label>
        <input type="time" id="time" name="time" required>

        <label for="duration">Lesson Duration (in minutes):</label>
        <input type="number" id="duration" name="duration" required>

        <!-- Add other lesson application form fields as needed -->

        <button type="submit">Apply for Lesson</button>
    </form>

    <a href="/dashboard">Back to Dashboard</a>
    <%- include('./partials/footer.ejs') %>
</body>
</html>
