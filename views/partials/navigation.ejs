<style>
  /* styles/style.css */


  .navigation {
    background-color: #4CAF50;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    height: 5vh; /* 10% of the viewport height */
    margin: 0;
    border-bottom: 6px solid #0075b0;
    zoom: 90%;
  }

  .logo {
    max-width: 180px;
    height: auto;
    z-index: 999;
  }

  .menu {
    display: flex;
    gap: 20px;
    align-items: center;
  }

  .menu a {
    color: white;
    text-decoration: none;
    font-weight: bolder;
    font-size: 1.2rem;
  }

  .user-actions {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .user-actions a {
    color: white;
    text-decoration: none;
  }

  .user-actions img {
    max-height: 30px;
  }

  .user-actions a[href="/register"] {
    background-color: black;
    color: white;
    font-weight: bold;
    padding: 8px 16px;
  }

  .user-actions a[href="/login"] {
    background-color: white;
    color: black;
    font-weight: bold;
    border: 1.5px solid black;
    padding: 8px 16px;
  }

  @media only screen and (max-width: 768px) {
    .menu,
    .user-actions {
      flex-direction: column;
      align-items: flex-start;
      display: none;
    }

    .menu a,
    .user-actions a {
      padding: 10px 0;
    }

    .navigation.active .menu,
    .navigation.active .user-actions {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }

  .hamburger-menu {
    display: none;
    cursor: pointer;
  }

  @media only screen and (max-width: 768px) {
    .hamburger-menu {
      display: block;
    }

    .navigation.active .user-actions {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 1rem;
      z-index: 999;
      background: #45a049;
    }

